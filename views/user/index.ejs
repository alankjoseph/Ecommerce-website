<body>
  <%- include('../partials/userNav.ejs') %>
    <main>
      <div>
        <div class="container">


          <div class="row row-pb-md pt-4">
            <% data.forEach(function(product){ %>
              <div class="col-lg-3 col-md-6 mb-4 text-center ">
                <div class="product-entry p-3  card h-100" style="height: 300px;">
                  <div class="text-end">
                    <span class="text-danger" id="<%= product._id %>"></span>
                    <button id="wishButton" class="btn btn-outline-none" onclick="addToWishlist('<%= product._id %>')">
